<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="#fff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_marginTop="2dp"
        android:padding="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.mikhaellopez.circularimageview.CircularImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="1"
            app:civ_shadow_color="@color/colorPrimary"
            android:id="@+id/profilePic"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/poster_name"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Myo Lwin Oo"
            android:textColor="#000"
            app:layout_constraintLeft_toRightOf="@+id/profilePic"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            android:layout_marginLeft="0dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="-9dp"
            android:layout_marginStart="8dp" />

        <TextView
            android:id="@+id/poster_time"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2hr ago"
            app:layout_constraintTop_toBottomOf="@+id/poster_name"
            app:layout_constraintLeft_toRightOf="@+id/profilePic"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" />

        <com.climbdev2016.noticeboard.ui.ExpandableTextView
            android:id="@+id/poster_content"
            android:text="Blah blah"
            app:layout_constraintTop_toBottomOf="@+id/profilePic"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#000"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.0" />


        <ImageView
            android:id="@+id/postOverFlow"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginRight="4dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>