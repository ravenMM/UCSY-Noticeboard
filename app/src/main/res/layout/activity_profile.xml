<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.ProfileActivity">

    <com.baoyz.widget.PullRefreshLayout
        android:id="@+id/profileRefresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#80FFFFFF">

                <com.climbdev2016.noticeboard.ui.CutLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.flaviofaria.kenburnsview.KenBurnsView
                            android:id="@+id/user_cover"
                            android:layout_width="match_parent"
                            android:layout_height="240dp"
                            android:background="#fff"/>

                    </FrameLayout>

                </com.climbdev2016.noticeboard.ui.CutLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="164dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="bottom">

                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:id="@+id/user_profile"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            app:civ_border_width="8dp"
                            app:civ_border_color="#80FFFFFF"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="16dp"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:id="@+id/name_tv"
                                android:text="Zwe Mun Htun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/occupation_tv"
                                android:text="zwemunhtun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp" />

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:text="Posts"
                            android:textStyle="bold"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/colorAccent" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/rc_profile_post"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </LinearLayout>

            </FrameLayout>
        </ScrollView>

    </com.baoyz.widget.PullRefreshLayout>


</RelativeLayout>